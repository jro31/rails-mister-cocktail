<h1>Pick your poison</h1>

<div class="container">
  <div class="row">
<% @cocktails.each do |c| %>
<%= link_to cocktail_path(c) do %>
<div class="col-xs-12 col-sm-4">
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path c.picture %>');">
  <div class="card-description">
    <h2><%= c.name %></h2>
  </div>
</div>
</div>
<% end %>
<% end %>
</div>
</div>

<%= link_to 'Add a new cocktail', new_cocktail_path %>

